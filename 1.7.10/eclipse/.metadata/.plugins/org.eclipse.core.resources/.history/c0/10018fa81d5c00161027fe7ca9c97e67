package com.pikachu923.BananaCraft.Recipes;

import net.minecraft.entity.player.EntityPlayer;
import net.minecraft.inventory.IInventory;
import net.minecraft.item.ItemStack;

import com.pikachu923.BananaCraft.init.ModItems;

public class CraftingHandler /*implements ICraftingHandler*/ { 
	public void onCrafting(EntityPlayer player, ItemStack item, IInventory craftMatrix) { 
		for (int i = 0; i < craftMatrix.getSizeInventory(); i++)
			// Checks all                 
			// the slots  {0
			
			if (craftMatrix.getStackInSlot(i) != null)
				// If there is an item   
				{    
				ItemStack j = craftMatrix.getStackInSlot(i); 
				// Gets the item    
				if (j.getItem() != null && j.getItem() == ModItems.BananaLifeCore)     
				{     ItemStack k = new ItemStack(ModItems.BananaLifeCore, 2, (j.getItemDamage() + 1));      
				if (k.getItemDamage() >= k.getMaxDamage()) {       
					k.stackSize--;     
					}     
				craftMatrix.setInventorySlotContents(i, k);
				}  
				}  
		} 
	public void onSmelting(EntityPlayer player, ItemStack item)
	{ } 
				

}

